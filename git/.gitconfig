[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = zed --wait
	autocrlf = input
	pager = cat

[init]
	defaultBranch = main

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	last = log -1 HEAD
	unstage = reset HEAD --
	amend = commit --amend
	undo = reset --soft HEAD~1

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[log]
	decorate = short

[color]
	ui = auto

[include]
	path = ~/.gitconfig.local

# Conditional includes for work/personal identity
# Work repos (any gitlab.kfplc.com remote)
[includeIf "hasconfig:remote.*.url:*://gitlab.kfplc.com/**"]
	path = ~/Developer/dotfiles/git/.gitconfig.work

# Personal repos (any github.com/szymdzum remote)
[includeIf "hasconfig:remote.*.url:*://*/szymdzum/**"]
	path = ~/Developer/dotfiles/git/.gitconfig.personal
