[user]
	name = Your Name
	email = your.email@example.com

[core]
	editor = zed --wait
	autocrlf = input
	pager = cat

[init]
	defaultBranch = main

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	last = log -1 HEAD
	unstage = reset HEAD --
	amend = commit --amend
	undo = reset --soft HEAD~1

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[log]
	decorate = short

[color]
	ui = auto

[include]
	path = ~/.gitconfig.local